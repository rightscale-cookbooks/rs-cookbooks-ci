<%# Template file to create Git configuration in Jenkins. git_username and git_email are filled out via attributes %>

<?xml version='1.0' encoding='UTF-8'?>
<hudson.plugins.git.GitSCM_-DescriptorImpl plugin="git@2.0">
  <generation>1</generation>
  <globalConfigName><%= @git_username %></globalConfigName>
  <globalConfigEmail><%= @git_email %></globalConfigEmail>
  <createAccountBasedOnEmail>false</createAccountBasedOnEmail>
</hudson.plugins.git.GitSCM_-DescriptorImpl>
